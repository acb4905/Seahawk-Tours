<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/title"
        android:textColor="#101F61"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!--    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="top"
            android:src="@drawable/front_page" />-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="220dp"
        android:text="@string/instructions"
        android:textColor="#101F61"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/buildings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:background="#FFF579"
        android:entries="@array/buildings"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:popupBackground="#FFF579"
        android:textSize="28sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickBuildingDetails"
        android:text="@string/buildingDetails"
        android:layout_marginTop="30dp"
        android:background="#FFF579"/>


</LinearLayout>